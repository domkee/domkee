<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.clickable {
			cursor:pointer;
		}
		.adjustmargin
		{
			margin: 6px;
		}
		.imageThumbnailPanel
		{
			height: 150px;
			margin-left: auto;
			margin-right: auto;
		}
	</ui:style>
	<g:HTMLPanel >
		<g:HTMLPanel styleName="{style.clickable}" ui:field="focusPanel">
		    
		    <div class="span2 well well-small {style.adjustmargin}">
				<div class="{style.imageThumbnailPanel}">
					<g:Image  ui:field="img" url="images/libro.png" styleName="img-rounded {style.imageThumbnailPanel}"></g:Image>
				</div>
				<h4 ui:field="txtNombre"></h4>
				<p class="text-info" ui:field="txtPrecio"></p>
				<p ui:field="txtDescripcion"></p>
				<h6 class="text-info" ui:field="txtUsuario"><i class="icon-user"></i> </h6>
				<a ui:field="btnMas" class="pull-right btn">Mas</a>
			</div>
			
					
			
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 